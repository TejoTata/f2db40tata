extends layout 
 
block content 
  h1= title
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let vehicleid = toShow._id 
    - let vehicle_type = toShow.vehicle_type 
    - let vehicle_name = toShow.vehicle_name 
    - let vehicle_price = toShow.vehicle_price 
    - let actionid = "/resource/vehicle/" + vehicleid 
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='vehicleAttr mr-3') vehicle ID is: 
        div #{vehicleid} 
      div.row 
        div(class='vehicleAttr mr-3') vehicle Type is: 
        div #{vehicle_type} 
      div.row 
        div(class='vehicleAttr mr-3') vehicle _price is: 
        div #{vehicle_price} 
      div.row 
        div(class='vehicleAttr mr-3') vehicle _name is: 
        div #{vehicle_name} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the vehicle collection 
      window.location.href='/vehicles' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'      //Don't need a body for the delete 
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/vehicle' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    }